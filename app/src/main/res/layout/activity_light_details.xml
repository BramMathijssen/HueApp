<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.bram.hueapp.LightDetailsActivity">

    <!-- Label met beschrijving van de lamp. -->
    <TextView
        android:id="@+id/labelTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp" />

    <!-- Label "Hue:". -->
    <TextView
        android:id="@+id/hueTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/hueLabel" />

    <!-- Regelaar voor de kleur. -->
    <SeekBar
        android:id="@+id/hueSeekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="65535" />

    <!-- Label "Saturation:". -->
    <TextView
        android:id="@+id/saturationTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/saturationLabel" />

    <!-- Regelaar voor de verzadiging. -->
    <SeekBar
        android:id="@+id/saturationSeekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="254" />

    <!-- Label "Brightness:" -->
    <TextView
        android:id="@+id/brightnessTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/brightnessLabel" />

    <!-- Regelaar voor de helderheid. -->
    <SeekBar
        android:id="@+id/brightnessSeekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="254" />

    <!-- Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/saveButton" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cancelButton" />

    </LinearLayout>

</LinearLayout>
